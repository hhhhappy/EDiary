<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
		android:id="@+id/loaddiary_title_text"
		android:layout_width="match_parent"
		android:layout_height="38dp"
		android:background="#2EFEC8" />
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageButton
			android:id="@+id/loaddiary_button_delete"
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:layout_marginRight="20dip"
			android:layout_alignParentRight="true"
			android:focusable= "false"
			android:background="@drawable/delete_color"
			/>
		<ImageButton
			android:id="@+id/loaddiary_button_edit"
			android:layout_height="50dp"
			android:layout_width="50dp"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="10dip"
			android:layout_toLeftOf="@+id/loaddiary_button_delete"
			android:focusable= "false"
			android:background="@drawable/edit_color"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="2px"
		android:background="#330033"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		/>
	<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
		<TextView
			android:id="@+id/loaddiary_date"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginRight="15dip"
			android:layout_toLeftOf="@+id/loaddiary_emotion"


			android:gravity="center"
			android:textSize="30sp"
			android:text = "2015-08-09"
			/>
		<ImageView
			android:id="@+id/loaddiary_emotion"
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:layout_marginRight="15dip"
			android:layout_toLeftOf="@+id/loaddiary_weather"

			android:src="@drawable/smile"
			/>
		<ImageView
			android:id="@+id/loaddiary_weather"
			android:layout_height="30dp"
			android:layout_width="30dp"
			android:layout_marginRight="15dip"
			android:src="@drawable/snow"
			android:layout_alignParentRight="true"
			/>
	</RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		>
		<TextView
			android:id="@+id/loaddiary_location"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dip"

			android:textSize="22sp"
			android:text="france"
			/>
	</RelativeLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="2px"
		android:background="#330033"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/loaddiary_photo_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:layout_marginLeft="10dp"
			android:visibility="gone"
			/>
		<ImageView
			android:id="@+id/loaddiary_photo_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:layout_marginLeft="10dp"
			android:visibility="gone"
			/>
		<ImageView
			android:id="@+id/loaddiary_photo_3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:layout_marginLeft="10dp"
			android:visibility="gone"
			/>
	</LinearLayout>
	<TextView
		android:id="@+id/loaddiary_context_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
			       
		android:textSize="15sp"
		android:textColor="#000000"
		android:text="Your story" />

</LinearLayout>
</ScrollView>