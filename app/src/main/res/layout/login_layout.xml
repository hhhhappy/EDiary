
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        
        android:textSize="31sp"
        android:textColor="#00EEEE"
        android:text="@string/app_name" />
    
	<TextView
	    android:id="@+id/login_welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        
        android:textSize="27sp"
        android:textColor="#000000"
        android:text="@string/welcome_text" />
	
	<ImageView 
	    android:id="@+id/welcome_login"
	    android:layout_height="200dp"
	    android:layout_width="wrap_content"
	    android:src="@drawable/welcome_login"
	    />
	
	<LinearLayout
	    android:id="@+id/interface_second"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    	<EditText 
	    android:id="@+id/login_password"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:inputType="textPassword"
	    android:hint="@string/login_hint_text"
	    />
    	<Button
    	    android:id="@+id/login_button_login"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text="@string/login_button_login"
    	    />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/interface_first"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
    	<TextView
	    android:id="@+id/login_set_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        
        android:textColor="#000000"
        android:textSize = "15sp"
        android:text="It's your first time to use EDiary, set your password, please!" />
    	
    	<EditText 
	    android:id="@+id/login_password_save"
	   	android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textPassword"
	    android:hint="@string/login_hint_text"
	    />
    	<EditText 
	    android:id="@+id/login_password_verifier"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textPassword"
	    android:hint="Enter the same password"
	    />
    	<Button
    	    android:id="@+id/login_button_save"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="right"
    	    android:text="Save"
    	    />
	</LinearLayout>
</LinearLayout>
</ScrollView>
